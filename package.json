{
  "name": "betteruptime",
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.4",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd packages/store && bunx prisma generate && cd ../../",
    "start:frontend":"cd apps/frontend && bun run start", 
    "start:api":"cd apps/api && bun run start", 
    "start:pusher":"cd apps/pusher && bun run start", 
    "start:consumer":"cd apps/consumer && bun run start" 
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
